{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1 class="text-3xl text-center my-4">{{ title }}</h1>
    <div data-controller="misc--loader episodes--list" data-action="pageChange->episodes--list#pageUpdated">
        <div 
            data-episodes--list-target="loader"
            data-misc--loader-target="indicator" 
            class="text-center py-8 text-gray-600">
            Loading Episodes...
        </div>

        <div 
            data-misc--loader-target="content"
            data-episodes--list-target="list"
            class="grid grid-cols-1 sm:grid-cols-3 gap-4 px-4 hidden">
        </div>

        <div data-episodes--list-target="pagination" class="mt-4 text-center"></div>   
 </div>
{% endblock %}
